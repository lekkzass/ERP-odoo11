<?xml version="1.0"?>
<odoo>
    <!-- this is our testing fields hafizalwi -->


    <!-- create a kanban-style view for dashboard -->
    <record id="website_supportzayd.ticket_dashboard_view_kanban" model="ir.ui.view">
        <field name="name">website.supportzayd.ticket.dashboard.kanban.view</field>
        <field name="model">website.supportzayd.ticket</field>
        <field name="arch" type="xml">

            <kanban class="o_kanban_mobile o_kanban_dashboard oe_background_grey" default_group_by="state"
                    group_create="false">
                <field name="subject"/>
                <field name="priority_star" widget="priority"/>
                <field name="category"/>
                <field name="description"/>
                <field name="state"/>
                <field name="problem"/> <!-- addons problem field for subtitle hafizalwi @22dec-->
                <field name="user_id"/>
                <field name="color"/>
                <field name="partner_id"/>

                <templates>

                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">

                            <div class="o_dropdown_kanban dropdown">

                                <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" role="button">
                                    <button class="btn fa fa-ellipsis-v" type="button" name="ellipsis button">

                                    </button>

                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <t t-if="widget.editable">
                                        <li>
                                            <a type="edit">Edit</a>
                                        </li>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <li>
                                            <a type="delete">Delete</a>
                                        </li>
                                    </t>
                                    <li>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </li>
                                </ul>
                            </div>
                            <div class="oe_kanban_content">

                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <div>
                                            <strong class="o_kanban_record_title">
                                                <span>
                                                    <field name="subject"/>
                                                </span>
                                            </strong>
                                        </div>
                                    </div>
                                </div>


                                <div>
                                    <span class="o_kanban_record_subtitle">
                                        <field name="state"/>
                                    </span>
                                </div>
                                <div>
                                    <span>Category:</span>
                                    <field name="category"/>
                                </div>
                                <div>
                                    <span>Problem:
                                        <field name="problem"/>
                                    </span>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority_star" widget="priority"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <img alt="this is image for assigned user"
                                             t-att-src="kanban_image('res.users', 'image_128', record.user_id.raw_value)"
                                             t-att-title="record.user_id.value" width="50" height="50"
                                             class="oe_kanban_avatar pull-right"/>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </t>
                </templates>
                <field name="id"
                       attrs="{'invisible': True}"/> <!-- this is a mandatory fields "id" as per documentation for any kanban view???, stackoverflow said -->
            </kanban>
        </field>
    </record>

</odoo>


